# ============================================
# CRYPTONITA PRODUCTION - RENDER ENV VARS
# ============================================
# Copy these variables to your Render dashboard
# Dashboard → Your Service → Environment
# ============================================

# ======================
# BINANCE API KEYS
# ======================
# IMPORTANT: Add your Binance API keys in Render dashboard
# For TESTNET (recommended to start):
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_secret_here

# For PRODUCTION trading (only when ready):
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_secret_here

# ======================
# TRADING MODE
# ======================
# Use 'testnet' for testing, 'production' for real trading
TRADING_MODE=testnet

# ======================
# JWT AUTHENTICATION
# ======================
# Render will auto-generate SECRET_KEY
# These values are already set in render.yaml
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ======================
# TRADING CONFIGURATION
# ======================
INITIAL_CAPITAL=10000
MAX_POSITION_SIZE_USD=500
MAX_DAILY_LOSS_USD=200
MAX_TOTAL_RISK_PERCENT=2.0
REQUIRE_MANUAL_APPROVAL=false

# ======================
# SYSTEM
# ======================
ENVIRONMENT=production
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ======================
# DATABASE
# ======================
# Render will automatically set DATABASE_URL
# No need to configure these manually
